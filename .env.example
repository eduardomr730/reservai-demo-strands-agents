# Entorno
ENVIRONMENT=production
DEBUG=false
PORT=8000
WORKERS=2
LOG_LEVEL=INFO

# Twilio
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_ACCOUNT_SID=your_account_sid_here  # Opcional
VALIDATE_TWILIO=true

# AWS
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Agente
AGENTCORE_MEMORY_ID=your_memory_id_here
AGENT_MODEL=eu.anthropic.claude-sonnet-4-5-20250929-v1:0

# Database
DATABASE_PATH=data/reservations.db

# Secrets Manager (opcional, para migraci√≥n futura)
USE_SECRETS_MANAGER=false
TWILIO_SECRET_NAME=prod/rincon/twilio
CONFIG_SECRET_NAME=prod/rincon/config